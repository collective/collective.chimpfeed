<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.chimpfeed">

  <portlet
      addview="collective.chimpfeed.CampaignPortlet"
      title="Mailchimp campaign portlet"
      description="Send or schedule newsletter campaigns."
      />

  <portlet
      addview="collective.chimpfeed.NewsletterPortlet"
      title="Newsletter portlet"
      description="Send or schedule single element newsletters."
      />

  <portlet
      addview="collective.chimpfeed.SubscriptionPortlet"
      title="Mailchimp subscription portlet"
      description="Sign up form to join a mailinglist."
      />

  <portlet
      addview="collective.chimpfeed.ModerationPortlet"
      title="Mailchimp moderation portlet"
      description="Moderate newsletter feed content."
      />

</portlets>
